<div style="padding-left:100px; padding-right:100px">
<div class="jumbotron">
<h1 style="text-align: center">Lista typów bohaterów</h1>
</br>

<div style="padding-left:50px; padding-right:50px">


 <% if user_signed_in? %>
 <%= will_paginate @types %>
<table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Opis</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type.desc %></td>
        <td style="width:10%"><center><span class="glyphicon glyphicon glyphicon-eye-open" aria-hidden="true"></span>&ensp;<%= link_to 'Pokaż bohaterów', type %></center></td>
        <td style="width:10%"><center><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&ensp;<%= link_to 'Edytuj', edit_type_path(type) %></center></td>
        <td style="width:10%"><center><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&ensp;<%= link_to 'Usuń', type, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></center></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @types %>
<% else  %>
<%= will_paginate @types %>
<table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type.desc %></td>
        <td><span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>&ensp;<%= link_to 'Pokaż bohaterów', type %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @types %>
<% end %>

<br>

<%= link_to 'Dodaj typ', new_type_path,class: 'btn btn-primary'%>
</div>
</div>
</div>
