<% if user_signed_in? %>
  <div class="form-group">
    <%= f.label :Nazwa, "Nazwa bohatera" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>


  
<div class="form-group">
    <%= f.label :Kod, "Cena bohatera" %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  
